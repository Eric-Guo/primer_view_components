<%= render(Primer::BaseComponent.new(**@system_arguments)) do %>
  <%= render(Primer::Beta::Text.new(mr: 2) ) { @title } %>
  <% if @count.present? %>
    <%= render(Primer::Beta::Counter.new(count: @count, mr: 2)) %>
  <% end %>
  <%= render(Primer::Beta::Octicon.new(icon: "chevron-up", classes: "up-icon", data: { target: "collapsible-header.arrowUp" })) %>
  <%= render(Primer::Beta::Octicon.new(icon: "chevron-down", classes: "down-icon", display: :none, data: { target: "collapsible-header.arrowDown" })) %>
  <% if @description.present? %>
    <%= render(Primer::Beta::Text.new(color: :subtle, data: { target: "collapsible-header.description" }) ) { @description } %>
  <% end %>
<% end %>
