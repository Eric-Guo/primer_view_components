<%= render Primer::BaseComponent.new(**@system_arguments) do %>
  <% if parent_link || breadcrumbs %>
    <div class="PageHeader-contextBar">
      <%= parent_link %>
      <%= breadcrumbs %>
    </div>
  <% end %>

  <div class="PageHeader-titleBar">
    <%= leading_action %>
    <%= title %>
    <% if actions.any? %>
      <div class="PageHeader-actions">
        <% actions.each do |action| %>
          <%= action %>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= description %>
<% end %>
